<h3 class="text-center"> Welcome to MessageMe - a complete chat app</h3>
<h2 class="ui center aligned medium icon header">
  <i class="circular inverted brown users icon"></i>
  Log in to continue
</h2>

<div class="ui  segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class=" ">
            <%= form_with(scope: :session, url: login_path, class: "ui form" ,local: true) do |f| %>
                        <div class= "field">
                            <%= f.label :username %>
                            <div class="ui left icon input">
                            <%= f.text_field :username , class: "", placeholder: "Enter your email" %> 
                            <i class="user icon"></i>
                            </div> 
                       </div> 

                        <div class= "field">
                            <%= f.label :Password %>
                            <div class="ui left icon input">
                            <%= f.text_field :password , class: "", placeholder: "Enter your password" %> 
                            <i class="lock icon"></i>
                            </div> 
                       </div> 
                       <%= f.submit "Log in", class: "ui orange submit button" %> 
            <% end %>
      </div>
    </div>
    <div class="center aligned middle aligned column">
      <div class="ui orange big button ">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>