<h2 class="ui center aligned medium icon header">
  <i class="circular inverted brown users icon"></i>
  Friends
</h2>

<div class="ui two column grid">
    <div class="twelve wide column ">
            <div class="ui fluid raised card chatbox bg-secondary ">
                <div class="content" id= "messages">
                    <div class="ui  feed" id= "message-container">
                        <% if @messages.any? %>
                            <%= render @messages %>
                        <% end %>
                </div>
            </div>
            <div class="extra content">
           
                        <%= form_with(model: @message, url: message_path, class: "ui reply form", remote: true, local: true,
                        data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
                            <div class="field">
                                <div class= "ui fluid icon input">
                                    <%= f.text_field :body, placeholder: "Enter message..." %>

                                    <%= f.button '<i class="bordered inverted orange icon edit"></i>'.html_safe , id: "messsage-btn"%>
                                </div>
                            </div>
                        <% end %>
                </div>
        </div>
    </div>

    <div class="four wide column">
        <div class="ui fluid raised card chatbox bg-secondary">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="active item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

